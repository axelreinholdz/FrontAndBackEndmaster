<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#312783">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:layout_column="16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What is the ship?"
            android:id="@+id/textView_question"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_marginTop="100dp" />

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:singleLine="false"
            android:textIsSelectable="true"
            android:inputType="textCapWords|textCapCharacters"
            android:linksClickable="false"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:editable="false"
            android:enabled="false"
            android:hint="Answer"
            android:textColorHint="#ffffff"
            android:textColorHighlight="#ffffff"
            android:textColorLink="#ffffff"
            android:typeface="sans"
            android:elegantTextHeight="false"
            android:clickable="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/breakline"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:layout_width="164dp"
            android:layout_height="58dp"
            android:id="@+id/submitBtn"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/submit100"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:baselineAlignBottom="false"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:background="#83d0f5"
            android:layout_marginBottom="30dp" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:id="@+id/imageView_cancel"
            android:layout_gravity="left|top"
            android:src="@drawable/cancel"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

    </FrameLayout>
</GridLayout>
