<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#312783"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/Layout_top">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView4"
                android:src="@drawable/mbs"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:id="@+id/imageView5"
                android:layout_gravity="left|top"
                android:src="@drawable/cancel"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/Layout_bottom">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Congratulations you made it!"
                    android:id="@+id/textView"
                    android:textSize="28dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@drawable/thin_breakline"
                    android:layout_gravity="top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: 1:26:57.13 h"
                    android:id="@+id/textView3"
                    android:layout_gravity="top|center"
                    android:textSize="30dp"
                    android:textColor="#ffffff"
                    android:autoText="false"
                    android:textIsSelectable="false"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranking: 45"
                    android:id="@+id/textView4"
                    android:layout_gravity="bottom|center"
                    android:textSize="30dp"
                    android:textColor="#ffffff"
                    android:autoText="false"
                    android:textIsSelectable="false"
                    android:textAlignment="center"
                    android:layout_marginBottom="15dp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:src="@drawable/thin_breakline"
                    android:layout_gravity="bottom" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageButton6"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/toplistbutton"
                    android:scaleType="centerCrop"
                    android:background="#83d0f5"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp" />

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageButton7"
                    android:layout_gravity="right|center_vertical"
                    android:background="#83d0f5"
                    android:src="@drawable/restartbutton"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
